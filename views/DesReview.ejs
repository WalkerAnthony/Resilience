  <script>
  function reviewDes(choice){
    if(choice == 'accept'){
      console.log('inside');

      var f = document.getElementById("approve");
      f.submit();
    }
    if(choice == 'reject'){
      console.log('inside');

      var f = document.getElementById("rejected");
      f.submit();
  }
};
</script>

