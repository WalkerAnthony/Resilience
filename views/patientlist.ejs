  <h1> Patient List: </h1>

    <h3> Unreviewed: </h3>
    <ul>
      <% for(i = 0; i < list.length; i++) { %>
          <li>
              <form id="<%= 'form'+i %>" action="/Review" method="post">
                <input type="hidden" name="id" id="<%= 'id_id'+i %>" value="<%=list[i]._id%>">
                 <input type="text" name="pun_name" id="<%= 'pun_name'+i %>"
                 readonly value="<%= list[i].FirstName %> <%= list[i].LastName %>">
                 <input type="hidden" name="status" value="unreviewed">
                 <input type="hidden" name="num" value="<%= i %>">
                 <button type="button" id= <%= 'view' + i %> onclick="viewPatient(this,'unreviewed')">View</button>
               </form>
            </li>
      <% } %>
    </ul>

    <h3> Accepted: </h3>
    <ul>
      <% for(i = 0; i < list1.length; i++) { %>
            <li>
                <form id="<%= 'a_form'+i %>" action="/Review" method="post">
                  <input type="hidden" name="id" id="<%= 'id_id'+i %>" value="<%=list1[i]._id%>">
                  <input type="text" name="pacc_name" id="<%= 'pacc_name'+i %>"
                  readonly value="<%= list1[i].FirstName %> <%= list1[i].LastName %>">
                  <input type="hidden" name="status" value="approve">
                  <input type="hidden" name="num" value="<%= i %>">
                  <button type="button" id= <%= 'view' + i %> onclick="viewPatient(this, 'accepted')">View</button>
               </form>
            </li>
      <% } %>
    </ul>

    <h3> Rejected: </h3>
