    <script type="text/javascript">
      function viewPatient(button, status) {
        var num = button.id.match(/\d+/)[0];
        console.log(num);
        var form;
        console.log(status);
        if (status == 'unreviewed') {
          form = document.getElementById('form'+num);
        }
        else if (status == 'accepted') {
          form = document.getElementById('a_form'+num);
        }
        else  {
          form = document.getElementById('r_form'+num);
        }
        form.submit();
        console.log(form);
        console.log('submitted form');
      }

    </script>
